
<div class="row">
    <div class="box">
      <% @recipes.each do |recipe| %>
      <div class="col-lg-12">
        <div class="well">
            <strong><%= link_to recipe.name, recipe_path(recipe) %></strong>
            <p class="date">Posted on
              <strong><%= recipe.created_at.strftime("%b %d, %Y") %></strong>
            </p>
              <%= recipe.summary %>
            </p>
        </div>
      </div>
      <%end%>
    </div>
</div>
