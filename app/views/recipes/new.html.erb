
<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <p>
      <h1>Create a new Recipe</h1>
    </p>
    <%= form_for @recipe do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :summary %>
      <%= f.text_field :summary %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.label :description %>
      <%= f.text_area :description, rows: 10 %>

      <%= f.label :search_terms %>
      <%= f.text_field :search_terms %>

      <%= f.label :image %>
      <%= f.file_field :image %>


      <%= f.fields_for(@recipe_ingredient) do |ri| %>
          <%= collection_select(:recipe, :id, @all_ingredients, :id, :name, {}, {:multiple => true})%>
      <% end %>

  </br>


      <%= f.submit 'Create Recipe', class: "btn btn-success" %>
    <%end%>
  </div>
</div>
