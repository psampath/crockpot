<div class="row">
    <div class="box">
            <div class="col-lg-12">
              <div class="date">Posted on
                <strong><%=recipe.created_at.strftime("%b %d, %Y")%></strong>
              </div>
              <h2>
                <strong><%= link_to recipe.name, recipe_path(recipe) %></strong>
              </h2>
              <p><%= recipe.summary %></p>
                <div class="col-lg-7 col-centered">
                  <div class="video-container">
                    <%= embed('https://www.youtube.com/watch?v=4AH3mIwHWeo') %>
                  </div>
                </div>
              <p><%= h(recipe.description).gsub(/\n/, '<br/>').html_safe %></p>
            </div>
    </div>
</div>
